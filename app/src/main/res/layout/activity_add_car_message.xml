<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/car_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_name_spinner" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/car_type_spinner" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/car_message_layout"
        android:orientation="horizontal"
        android:layout_below="@+id/car_message_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号:" />

        <Spinner
            android:id="@+id/car_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/province"/>

        <EditText
            android:id="@+id/pre"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="1"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/car_number"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_engine_number_layout"
        android:layout_below="@+id/car_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发动机号:"/>

        <EditText
            android:id="@+id/car_engine_number"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:inputType="text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_level_layout"
        android:layout_below="@+id/car_engine_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车身级别:"/>

        <EditText
            android:numeric="integer"
            android:id="@+id/door_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="门"/>
        <EditText
            android:numeric="integer"
            android:id="@+id/seat_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:inputType="number" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_mileage_layout"
        android:layout_below="@+id/car_level_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里程数:"/>
        <EditText
            android:inputType="number"
            android:id="@+id/car_mileage"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_gas_layout"
        android:layout_below="@+id/car_mileage_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余汽油量:"/>
        <EditText
            android:inputType="number"
            android:id="@+id/car_gas"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"/>
    </LinearLayout>

    <TableLayout
        android:layout_below="@+id/car_gas_layout"
        android:id="@+id/car_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发动机性能:"/>
            <Spinner
                android:id="@+id/engine_is_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/performance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="变速器性能:"/>
            <Spinner
                android:id="@+id/trans_is_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/performance"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车灯:"/>
            <Spinner
                android:id="@+id/light_is_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/performance"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_below="@+id/car_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/finish_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完成"/>

    </LinearLayout>
</RelativeLayout>

