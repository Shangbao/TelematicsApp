<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1e1f22"
        >
        <com.hangon.common.Topbar
            android:id="@+id/addCarMessageTopbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            custom:mTitle="添加新车辆"
            custom:mTitleTextColor="#ffffff"
            custom:mTitleTextSize="10dp"
            custom:rightText="保存"
            custom:rightTextColor="#ffffff"
            >
        </com.hangon.common.Topbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d6cdcd"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/car_message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/editext_border"
            >

            <ImageView
                android:id="@+id/carFlag"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_launcher"/>

            <Spinner
                android:id="@+id/car_name_spinner"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/carFlag"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="20dp"
                android:background="#00ffffff"
                />

            <Spinner
                android:id="@+id/car_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/car_name_spinner"
                android:layout_marginLeft="5dp"
                android:spinnerMode="dropdown"
                android:background="#00ffffff"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/car_number_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="车主姓名"/>

            <EditText
                android:id="@+id/cus_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp"
                android:singleLine="true"
                android:background="#00ffffff"
                android:maxLength="5"
                android:inputType="text"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_below="@+id/car_number_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="手机号码"/>

            <EditText
                android:id="@+id/phone_num"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp"
                android:singleLine="true"
                android:background="#00ffffff"
                android:maxLength="11"
                android:inputType="number"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff"
            >
            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:text="车牌号" />

            <Spinner
                android:id="@+id/car_province"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
               android:spinnerMode="dropdown"
                android:background="#00ffffff"
                android:entries="@array/province"/>

            <EditText
                android:id="@+id/pre"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:maxLength="1"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/car_province"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:hint="区域"
                android:background="#00ffffff"
                />

            <EditText
                android:id="@+id/car_number"
                android:layout_width="100dp"
                android:maxLength="6"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/car_province"
                android:layout_marginLeft="70dp"
                android:textSize="13sp"
                android:background="#00ffffff"
                android:hint="车牌尾号数字"
                android:inputType="text"/>
        </RelativeLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>


        <RelativeLayout
            android:layout_below="@+id/car_number_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="发动机号"/>

            <EditText
                android:id="@+id/car_engine_number"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp"
                android:singleLine="true"
                android:background="#00ffffff"
                android:inputType="text"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_below="@+id/car_number_layout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="车架号"/>

            <EditText
                android:id="@+id/car_chassis_number"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="95dp"
                android:singleLine="true"
                android:background="#00ffffff"
                android:inputType="text"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="车身级别"/>

            <EditText
                android:numeric="integer"
                android:id="@+id/door_count"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_centerVertical="true"
                android:maxLength="2"
                android:hint="门数"
                android:textSize="13sp"
                android:background="#00ffffff"
                android:inputType="number" />

            <EditText
                android:id="@+id/seat_count"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:numeric="integer"
                android:layout_toRightOf="@+id/t3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:textSize="13sp"
                android:hint="座位数"
                android:maxLength="3"
                android:background="#00ffffff"
                 />
        </RelativeLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff"
            >
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="里程数"/>
            <EditText
                android:id="@+id/car_mileage"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_centerVertical="true"
                android:background="#00ffffff"
                android:textSize="14sp"
                android:hint="默认千米计算"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="剩余汽油量"/>

            <EditText
                android:id="@+id/car_gas"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_centerVertical="true"
                android:background="#00ffffff"
                android:hint="默认百分比计算"
                android:textSize="14sp" />
        </RelativeLayout>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="发动机性能"/>
            <Spinner
                android:id="@+id/engine_is_good"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:background="#00ffffff"
                android:entries="@array/performance"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="变速器性能"/>
            <Spinner
                android:id="@+id/trans_is_good"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:background="#00ffffff"
                android:entries="@array/performance"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:text="车灯状态"/>
            <Spinner
                android:id="@+id/light_is_good"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:spinnerMode="dropdown"
                android:background="#00ffffff"
                android:entries="@array/performance"/>
        </RelativeLayout>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#666666"/>

    </LinearLayout>

</LinearLayout>

