<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/topbar"
        android:layout_marginTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/btnPlayModel"
            android:layout_width="200dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/playModelImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/lj_yy_003" />

            <TextView
                android:id="@+id/playModelTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="随机播放"
                android:textColor="#019b79"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>


    <ListView
        android:id="@+id/songList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:divider="@null"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#019b79"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/wdyy_22" />

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/img2"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/selectedSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="独家记忆"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/selectedSinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:text="陈小春"
                android:textColor="#ffffff"
                android:layout_below="@+id/selectedSong"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@+id/selectedSinger"
                >

                <SeekBar
                    android:id="@+id/musicSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumb="@drawable/seekbar_thumb"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/currTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="01:55"
                    android:textColor="#ffffff"
                    android:textSize="10sp"
                   />

                <TextView
                    android:id="@+id/totleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="04:25"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/l1">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lj_yy_004" />

            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/lj_yy_005" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/lj_yy_006" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>