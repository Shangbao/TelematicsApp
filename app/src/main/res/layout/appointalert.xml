<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:id="@+id/order_appoint_alert"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout

            android:background="#ee745f"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="预约订单"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     油号："
            android:textSize="14sp"
            android:gravity="center"
            />
        <TextView
            android:gravity="center_vertical"
            android:text="#e39"
            android:id="@+id/appoint_gastype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="单价："
            android:textSize="14sp"
            android:gravity="center"
            />
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/appoint_gassingleprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="￥5.97"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="加油数量："
        android:textSize="14sp"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/alert_appoint_gaslitre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="升数"
        android:inputType="numberDecimal"
        android:digits="1234567890."
        android:textSize="14sp" />
</LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="金额："
                        android:textSize="14sp"
                        android:gravity="center"
                        />
                    <EditText
                        android:inputType="numberDecimal"
                        android:digits="1234567890."
                        android:gravity="center_vertical"
                        android:id="@+id/alert_appoint_gasmoney"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="金额 "
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:paddingTop="5dp"
                android:paddingRight="60dp"
                android:paddingLeft="60dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                  <TextView
                      android:layout_alignParentLeft="true"
                      android:layout_marginTop="5dp"
                      android:id="@+id/appoint_order_yes"
                      android:layout_width="80dp"
                      android:layout_height="40dp"
                      android:text="确定"
                      android:textColor="#ffffff"
                      android:gravity="center"
                      android:textSize="16sp"
                      android:background="@drawable/order_list_001"
                      />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:text="确定"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:id="@+id/appoint_order_no"

                        android:background="@drawable/order_list_002"
                        android:layout_marginLeft="20dp"
                        />
                </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
