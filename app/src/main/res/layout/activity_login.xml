<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="40dp"
    android:orientation="vertical"

    tools:context="com.hangon.user.activity.LoginActivity">
   <ImageView
       android:layout_gravity="center"
       android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/login_pic"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
   <EditText
       android:id="@+id/lUserName"
       android:drawableLeft="@drawable/login2"
       android:hint="请输入您的手机号码"
       android:textSize="20sp"
       android:maxLength="11"
       android:numeric="integer"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/lUserPass"
        android:password="true"
        android:textSize="20sp"
        android:drawableLeft="@drawable/login1"
        android:hint="填写6-12位密码"
        android:maxLength="12"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/userLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="登录"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="#0985f1" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <Button
           android:id="@+id/userRegister"
           android:layout_alignParentBottom="true"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="新用户?点击注册新用户"
           android:background="#ffffff"
           android:textSize="20dp"
           android:gravity="center"
           />


   </RelativeLayout>




</LinearLayout>