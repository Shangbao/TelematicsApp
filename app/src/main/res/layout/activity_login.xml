<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="com.hangon.user.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/dl_01">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/dl_03" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:id="@+id/login_layout1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/btn_login1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/dl_04" />

            <com.hangon.common.CleanableEditText
                android:id="@+id/lUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_login2"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:numeric="integer"
                android:textColor="#a3a3a3"
                android:drawableRight="@drawable/zc_13"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/login_layout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/login_layout1"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_login1"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:background="@drawable/dl_08" />

            <com.hangon.common.CleanableEditText
                android:id="@+id/lUserPass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_login2"
                android:hint="请输入密码"
                android:maxLength="12"
                android:password="true"
                android:textColor="#a3a3a3"
                android:drawableRight="@drawable/zc_13"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/userLogin"
            android:layout_width="125dp"
            android:layout_height="27dp"
            android:layout_below="@+id/login_layout2"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/dl_12" />

        <Button
            android:id="@+id/userRegister"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/userLogin"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_login2"
            android:text="新用户?点击注册"
            android:textColor="#019b79"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/userRegister"
            android:background="#019b79" />
    </RelativeLayout>


</LinearLayout>