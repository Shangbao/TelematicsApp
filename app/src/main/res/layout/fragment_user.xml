<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#666666">
        <com.hangon.common.Topbar
            android:id="@+id/userTopbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            custom:mTitleTextSize="12sp"
            custom:mTitleTextColor="#ffffff"
            custom:mTitle="个人中心"
            custom:rightTextColor="#ffffff"
            custom:rightText="编辑">
        </com.hangon.common.Topbar>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:background="#6c6c6c"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    
    <LinearLayout
       android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeHeadIcon"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_launcher"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="210dp"
            android:layout_height="60dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/homeNickName"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纯天然。"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView

                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号："
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/homePhoneNum"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13166837709"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/toSetHeadIcon"
            android:background="@drawable/user_008"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_marginTop="3dp"
        android:background="#6c6c6c"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:textSize="20sp"/>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/userInfoList"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
    </ListView>

    <ImageView
        android:layout_marginTop="3dp"
        android:background="#6c6c6c"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="20sp"/>

</LinearLayout>