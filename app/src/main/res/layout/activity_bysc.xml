<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#dfdfdf">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/lj_dl_005"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行驶距离"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/lj_by_001"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/byscKmTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff000"
                    android:text="5000KM"
                    android:layout_centerInParent="true"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


    <ListView
        android:id="@+id/byscList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgView1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/lj_by_009"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgView1"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="更换"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgView2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/lj_by_010"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgView2"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="检查"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgView3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/lj_by_011"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgView3"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="正常"
                    android:textSize="14sp"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <ImageView
                    android:id="@+id/imgView4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/lj_by_012"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgView4"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:text="无"
                    android:textSize="14sp"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>