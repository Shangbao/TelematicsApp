<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    >
    <LinearLayout
        android:layout_marginLeft="0dp"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <CheckBox
            android:focusable="false"
            android:enabled="false"
            android:clickable="false"
            style="@style/CustomCheckboxTheme"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_cb"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                 <TextView
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:id="@+id/list_editorder_gasname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="hahhahahahhahahhahahhaha"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000000"
                    android:id="@+id/gastypetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加油类型："
                    android:textSize="12sp" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/list_gastype_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#E97"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="0dp"
            android:background="#e0e0e0"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
              <TextView
                  android:layout_marginTop="3dp"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="下单时间："
                  android:textSize="12sp"
                  android:textColor="#000000"
                  />
            <TextView
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:id="@+id/list_ordertime_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/ordertimetext"
                android:text="2016-08-12  12:00"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="0dp"
        android:background="#e0e0e0"
        />
</LinearLayout>