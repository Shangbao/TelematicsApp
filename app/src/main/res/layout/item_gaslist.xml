<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:id="@+id/gaslist_name"
        android:paddingTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="加油站名称"
        android:textSize="14sp"
        />
      <TextView
          android:id="@+id/gaslist_address"
          android:layout_width="match_parent"
          android:layout_height="28dp"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/gaslist_name"
          android:text="加油站地址"
          android:textSize="10sp"
          android:layout_marginLeft="5dp"
           />
       <TextView
           android:id="@+id/gaslist_distance"
           android:layout_width="50dp"
           android:layout_height="20dp"
           android:layout_alignBaseline="@+id/gaslist_name"
           android:layout_alignBottom="@+id/gaslist_name"
           android:layout_alignParentRight="true"
           android:layout_marginRight="42dp"
           android:gravity="center"
           android:text="31111"
           android:textSize="12sp" />

       <TextView
           android:id="@+id/distance_meter"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/gaslist_name"
           android:layout_alignBottom="@+id/gaslist_name"
           android:layout_alignParentRight="true"
           android:layout_marginRight="24dp"
           android:text="米"
           android:textSize="12sp" />
       <TextView 
             android:visibility="gone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/gaslist_lat"
           />
        <TextView 
              android:visibility="gone"
             android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/gaslist_lon"
           />
        <TextView 
              android:visibility="gone"
             android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/gaslist_brandname"
           />
         <TextView 
             android:visibility="gone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/gaslist_price"
           />
         <TextView 
             android:id="@+id/gascode"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:visibility="gone"
             android:text="1"
             />
</RelativeLayout>
